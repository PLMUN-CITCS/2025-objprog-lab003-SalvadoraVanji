public class ArithmeticDemo {
    public static void main(String[] args) {

        int num1 = 10;
        int num2 = 5;
        double num3 = 3.0; // Declaring a double variable

        // Arithmetic operations
        int sum = num1 + num2;
        int difference = num1 - num2;
        int product = num1 * num2;
        int quotient = num1 / num2; // Integer division (result is an integer)
        int remainder = num1 % num2;
        int expressionResult = num1 + num2 * 2 - (num1 / num2); // Order of operations: multiplication first, then addition and subtraction

        // Display results
        System.out.println("Sum: " + sum);
        System.out.println("Difference: " + difference);
        System.out.println("Product: " + product);
        System.out.println("Quotient: " + quotient);
        System.out.println("Remainder: " + remainder);
        System.out.println("Expression Result: " + expressionResult); // Explaining the order of operations
        System.out.println("Expression Result with decimal division: " + (num1 + num2 * 2 - (num1 / num3))); // U
